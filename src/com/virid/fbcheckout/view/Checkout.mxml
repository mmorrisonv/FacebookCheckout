				<s:TextInput id="bstate" prompt="ST" width="18%" maxChars="2" change="handleTextInputChanged(event)"/> 
				<s:TextInput id="bzip" prompt="Zip" width="22%" maxChars="5" change="handleTextInputChanged(event)"/>
			</s:HGroup>	
